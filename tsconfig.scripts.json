{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "rootDir": "."
    },
    "include": [
        "scripts/**/*",
        "lib/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}